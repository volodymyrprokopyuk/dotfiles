# show status bar and vertical scroll bar
set guioptions sv
set font "JetBrainsMono NF 10"
set selection-clipboard clipboard
set selection-notification false
set show-recent 15

set adjust-open width
set scroll-full-overlap 0.1
set page-v-padding 40
set page-h-padding 40
set incremental-search true
set statusbar-home-tilde true
set statusbar-page-percent true

set default-bg "#C6C6C3" # gray
set statusbar-bg "#FEFFAE" # yellow
set statusbar-fg "#34342F"
set inputbar-bg "#D2FE9B" # green
set inputbar-fg "#34342F"
set completion-bg "#FFE9CF" # cream
set completion-fg "#34342F"
set completion-highlight-bg "#BAEFE9" # blue
set completion-highlight-fg "#34342F"
set index-bg "#FFE9CF" # cream
set index-fg "#34342F"
set index-active-bg "#BAEFE9" # blue
set index-active-fg "#34342F"
set notification-bg "#DBF9FF" # blue
set notification-fg "#34342F"
set notification-warning-bg "#FFD0A5" # orange
set notification-warning-fg "#34342F"
set notification-error-bg "#FFB3B5" # red
set notification-error-fg "#34342F"
set highlight-color rgba(255,216,0,0.4) # yellow
set highlight-active-color rgba(152,251,152,0.4) # green
