{
  "editor.fontFamily": "'Source Code Pro', monospace",
  "editor.fontWeight": "300",
  "editor.fontSize": 14,

  "editor.lineNumbers": "on",
  "editor.rulers": [80],
  "editor.cursorStyle": "line",
  "editor.renderLineHighlight": "line",
  "editor.selectionHighlight": true,
  "editor.scrollBeyondLastLine": true,
  "editor.mouseWheelZoom": true,
  "editor.selectionClipboard": true,

  "editor.renderWhitespace": "none",
  "editor.trimAutoWhitespace": true,
  "editor.formatOnType": false,
  "editor.formatOnSave": false,

  "editor.tabSize": 2,
  "editor.insertSpaces": true,
  "editor.detectIndentation": true,

  "editor.wrappingColumn": 0,
  "editor.wordWrap": true,
  "editor.wrappingIndent": "same",

  "editor.quickSuggestions": true,
  "editor.quickSuggestionsDelay": 10,
  "editor.parameterHints": true,
  "editor.snippetSuggestions": "bottom",
  "editor.wordBasedSuggestions": true,
  "editor.suggestOnTriggerCharacters": true,
  "editor.acceptSuggestionOnEnter": true,
  "editor.tabCompletion": false,
  "editor.autoClosingBrackets": true,

  "editor.folding": true,
  "editor.codeLens": true,

  "diffEditor.renderSideBySide": true,
  "diffEditor.ignoreTrimWhitespace": true,
  "diffEditor.renderIndicators": true,

  "window.zoomLevel": 1.5,
  "window.showFullPath": true,

  "files.exclude": {"**/.git": true, "**/.hg": true},
  "files.watcherExclude": {"**/.git/objects/**": true, "**/node_modules/**": true},
  "files.encoding": "utf8",
  "files.eol": "\n",
  "files.trimTrailingWhitespace": true,
  "files.insertFinalNewline": true,
  "files.autoSave": "afterDelay",
  "files.autoSaveDelay": 60000,
  "files.hotExit": true,

  "search.exclude": {"**/node_modules": true, "**/bower_components": true},

  "terminal.integrated.scrollback": 10000,

  "extensions.autoUpdate": true,
}
