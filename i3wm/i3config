set $a 38
set $b 56
set $c 54
set $d 40
set $e 26
set $f 41
set $g 42
set $h 43
set $i 31
set $j 44
set $k 45
set $l 46
set $m 58
set $n 57
set $o 32
set $p 33
set $q 24
set $r 27
set $s 39
set $t 28
set $u 30
set $v 55
set $w 25
set $x 53
set $y 29
set $z 52
set $brright 35
set $brleft 34
set $equal 21
set $bkspace 22

set $ws1 "1"
set $ws2 "2"
set $ws3 "3"
set $ws4 "4"
set $ws5 "5"
set $ws6 "6"
set $ws7 "7"
set $ws8 "8"
set $ws9 "9"
set $ws10 "10"

set $mod Mod4
bindcode $mod+$q kill
bindcode $mod+$r reload
bindcode $mod+Shift+$r restart
bindsym $mod+Tab workspace back_and_forth
bindcode $mod+$z fullscreen toggle
bindcode $mod+$f floating toggle
floating_modifier $mod

bindcode $mod+$h focus left
bindcode $mod+$j focus down
bindcode $mod+$k focus up
bindcode $mod+$l focus right

bindcode $mod+Shift+$h move left
bindcode $mod+Shift+$j move down
bindcode $mod+Shift+$k move up
bindcode $mod+Shift+$l move right

bindsym $mod+1 workspace $ws1
bindsym $mod+2 workspace $ws2
bindsym $mod+3 workspace $ws3
bindsym $mod+4 workspace $ws4
bindsym $mod+5 workspace $ws5
bindsym $mod+6 workspace $ws6
bindsym $mod+7 workspace $ws7
bindsym $mod+8 workspace $ws8
bindsym $mod+9 workspace $ws9
bindsym $mod+0 workspace $ws10

bindsym $mod+Shift+1 move container to workspace $ws1; workspace $ws1
bindsym $mod+Shift+2 move container to workspace $ws2; workspace $ws2
bindsym $mod+Shift+3 move container to workspace $ws3; workspace $ws3
bindsym $mod+Shift+4 move container to workspace $ws4; workspace $ws4
bindsym $mod+Shift+5 move container to workspace $ws5; workspace $ws5
bindsym $mod+Shift+6 move container to workspace $ws6; workspace $ws6
bindsym $mod+Shift+7 move container to workspace $ws7; workspace $ws7
bindsym $mod+Shift+8 move container to workspace $ws8; workspace $ws8
bindsym $mod+Shift+9 move container to workspace $ws9; workspace $ws9
bindsym $mod+Shift+0 move container to workspace $ws10; workspace $ws10

bindsym $mod+Return exec wezterm
bindsym $mod+space exec emacs
bindcode $mod+$w exec firefox

assign [class=(?i)wezterm] $ws1
assign [class=(?i)firefox] $ws2
for_window [class=(?i)wezterm] focus
for_window [class=(?i)firefox] focus

exec --no-startup-id feh --bg-fill \
  /usr/share/endeavouros/backgrounds/endeavouros-wallpaper.png
exec --no-startup-id dunst

set $dsp Virtual1
set $mou "ImExPS/2 Generic Explorer Mouse"
set $ctm "Coordinate Transformation Matrix"
bindcode $mod+Shift+$brright exec xrandr --output $dsp --rotate left; \
  exec xinput set-prop $mou $ctm 0 -1 1 1 0 0 0 0 1
bindcode $mod+Shift+$brleft exec xrandr --output $dsp --rotate right; \
  exec xinput set-prop $mou $ctm 0 1 0 -1 0 1 0 0 1
bindcode $mod+Shift+$equal exec xrandr --output $dsp --rotate normal; \
  exec xinput set-prop $mou $ctm 1 0 0 0 1 0 0 0 1

set $mode_input input
mode $mode_input {
  bindsym Return mode default
  bindcode Control+$g mode default
  bindcode $e exec setxkbmap us; exec busctl --user call rs.i3status /kblayout \
    rs.i3status.custom SetText ss English us; mode default
  bindcode $s exec setxkbmap es; exec busctl --user call rs.i3status /kblayout \
    rs.i3status.custom SetText ss Spanish es; mode default
  bindcode $u exec setxkbmap ua; exec busctl --user call rs.i3status /kblayout \
    rs.i3status.custom SetText ss Ukrainian ua; mode default
  bindcode $r exec setxkbmap ru; exec busctl --user call rs.i3status /kblayout \
    rs.i3status.custom SetText ss Russian ru; mode default
}
bindcode $mod+$i mode $mode_input

bindcode $mod+$p exec maim --select --format png --quality 10 --hidecursor \
  --bordersize 5 | xclip -selection clipboard -target image/png

bindcode $mod+$a exec rofi -show drun
bindcode $mod+$o exec fd --no-ignore --type file -e pdf -e djvu . \
  ~/Downloads ~/Projects/bayan | rofi -dmenu -i | xargs -I {} xdg-open {}

set $lockcolor EEC500
bindcode $mod+$bkspace exec i3lock --blur 12 \
  --clock --time-str "%H:%M" --date-str "%a %e %b" \
  --time-color $lockcolor --date-color $lockcolor \
  --keylayout 1 --layout-color $lockcolor \
  --indicator --ring-color $lockcolor
bindcode $mod+Shift+$bkspace exec systemctl poweroff
bindcode $mod+Shift+$y exec i3-msg exit # logout
bindcode $mod+Shift+$b exec systemctl reboot

gaps inner 2
new_window pixel 1

set $white #FFFFFF
set $yellow #EEC500

client.focused $white $white $white $yellow $yellow

bar {
  status_command i3status-rs ~/.config/i3status-rust/config.toml
  position top
  font pango: "Noto Sans Regular" 13, "Font Awesome 6 Free Regular" 13
}
