# show status bar and vertical scroll bar
set guioptions sv
set font "JetBrains Mono normal 13"
set selection-clipboard clipboard
set show-recent 15

set adjust-open width
set scroll-full-overlap 0.1
set page-padding 10
set incremental-search true
set statusbar-home-tilde true
set statusbar-page-percent true

set default-bg "#C6C6C3"
set statusbar-bg "#FEFFAE"
set statusbar-fg "#34342F"
set inputbar-bg "#FEFFAE"
set inputbar-fg "#34342F"
set highlight-color "#DEFD2C"
set highlight-active-color "#2AF52A"
set index-bg "#FFE9CF"
set index-fg "#000000"
set index-active-bg "#BAEFE9"
set index-active-fg "#000000"
